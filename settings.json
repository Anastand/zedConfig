// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "languages": {
    "JavaScript": {
      "show_inline_completions": true
    }
  },
  "features": {
    "inline_completion_provider": "supermaven"
  },
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "buffer_line_height": {
    "custom": 2.2
  },
  // // experimental settings
  // "experimental.theme_overrides": {
  //   "editor.document_highlight.bracket_background": "#99f7de99",
  // },
  // end of experimental settings
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Andromeda"
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 5000,
      "enabled": true,
    }
  },
  "Markdown": {
    "formatter": "prettier"
  },
  "format_on_save": "on",
  "formatter": {
    "language_server": {
      "name": "prettier"
    }
  },
  "terminal": {
    "font_size": 14,
    "font_family": "FiraCode Nerd Font",
    "copy_on_select": true,
    "cursor_shape": "bar",
    "cursor_blink": true,
    "colors": {
      "cursor": "#f8f8f0",
    },
  },
  "current_line_highlight": "all",
  "auto_install_extensions": {
    "html": true,
    "dockerfile": true,
    "docker-compose": false
  },
  "TypeScript": {
    "formatter": "prettier",
    "code_actions_on_format": {
      "source.fixAll": true,
      "source.fixAll.eslint": true
    },
  },
  "notification_panel": {
    "button": false,
  },
  "chat_panel": {
    "button": false,
  },
  "collaboration_panel": {
    "button": false,
  },
}
